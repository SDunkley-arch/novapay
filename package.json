{
  "name": "novapay",
  "version": "1.0.0",
  "private": true,
  "description": "NovaPay - Full-stack application with Express backend and Vite frontend",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev --prefix server\" \"npm run dev --prefix frontend\"",
    "dev:backend": "npm run dev --prefix server",
    "dev:frontend": "npm run dev --prefix frontend",
    "install:all": "npm install && cd server && npm install && cd ../frontend && npm install",
    "build": "npm run build --prefix frontend",
    "start": "npm start --prefix server"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.46.4"
  },
  "workspaces": [
    "server",
    "frontend"
  ],
  "dependencies": {
    "framer-motion": "^12.23.24",
    "motion": "^12.23.24"
  }
}
