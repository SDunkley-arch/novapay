datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  balance   Balance?
  transactions Transaction[]
}

model Balance {
  id     Int  @id @default(autoincrement())
  jmd    Int  @default(12500000) // cents: 125,000.00 JMD (in cents)
  usd    Int  @default(18000)    // cents: 180.00 USD (in cents)
  userId Int  @unique
  user   User @relation(fields: [userId], references: [id])
}

model Transaction {
  id        Int      @id @default(autoincrement())
  kind      TxKind
  amount    Int
  currency  String   // "JMD" | "USD"
  note      String?
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

enum TxKind {
  P2P_SEND
  P2P_RECV
  BILL
  TOPUP
  WITHDRAW
  CARD
}
